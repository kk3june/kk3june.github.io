---
interface ButtonProps {
	label: string;
	link: string;
	style?: 'solid' | 'outline';
}

const { label, link, style = 'solid' } = Astro.props;
const variantClass =
	style === 'outline' ? 'element-button--outline' : 'element-button--solid';
---

<a href={link} class={`element-button ${variantClass}`}>
	<span>{label}</span>
</a>

<style>
	.element-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-width: 120px;
		padding: 0.7rem 1.75rem;
		font-weight: 600;
		font-size: 0.95rem;
		text-decoration: none;
		border-radius: 10px;
		border: 1px solid transparent;
		transition: transform 120ms ease, box-shadow 120ms ease,
			background-color 120ms ease, color 120ms ease;
	}

	.element-button--solid {
		background: #0f0f11;
		color: #fff;
		box-shadow: 0 12px 25px rgba(15, 18, 25, 0.25);
	}

	.element-button--outline {
		background: #fff;
		color: #0f0f11;
		border-color: rgba(19, 19, 23, 0.35);
		box-shadow: inset 0 0 0 1px rgba(19, 19, 23, 0.05);
	}

	.element-button:hover {
		transform: translateY(-1px);
	}
</style>
