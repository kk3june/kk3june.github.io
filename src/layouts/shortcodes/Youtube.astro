---
interface YoutubeProps {
	id: string;
	title?: string;
}

const { id, title = 'YouTube video' } = Astro.props;
const embedUrl = `https://www.youtube.com/embed/${id}?rel=0&modestbranding=1`;
---

<div class="element-media">
	<iframe
		title={title}
		src={embedUrl}
		loading="lazy"
		allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
		allowfullscreen
	></iframe>
</div>

<style>
	.element-media {
		position: relative;
		width: 100%;
		padding-top: 56.25%;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 18px 40px rgba(15, 18, 25, 0.12);
		border: 1px solid rgba(var(--gray-light), 0.9);
	}

	.element-media iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}
</style>
